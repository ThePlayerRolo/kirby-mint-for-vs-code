{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Mint",
	"patterns": [
		{
			"include": "#comments"
		},

		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#functions"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.mints",
					"match": "\\b(module|pod|enum|const|this|ref|void|class|utility|partial)\\b"
				},
				{
					"name": "keyword.control.mints",
					"match": "\\b(stsra4|fenter|ldfrsr|callnt|nop|ldsrzr|ldsrbt|ldsrc4|ldsrca|ldsrsr|ldsrfz|ldfrsr|ldfs2|ldfs3f|ldfrfr|ldsrsa|ldsrsv|ldsra4|ldofa4|ldsrsz|ldsrfa|ldtype|stsrsr|stofa4|stsvsr|addi32|subi32|muls32|divs32|mods32|mulu32|divu32|modu32|inci32|deci32|negs32|addf32|subf32|mulf32|divf32|incf32|decf32|negf|lts32|le32|ltu32|leu32|eqi32|nei32|ltf32|lef32|eqf32|nef32|ltcmp|lecmp|eqbool|nebool|eqptr|neptr|eqstr|nestr|eqwstr|newstr|astidx|andi32|ori32|xori32|nti32|ntbool|slli32|slri32|jmp|jmppos|jmpneg|fleave|fret|call|callnv|callnt|yield|mcopy|mzeros|sppsh|sppshz|sppop|addofs|ldaddr|arpshz|aridx|arpop|arcopy|wapshz|waidx|wapop|cts32f|cts32u|ctu32s|ctu32f|ctf32s|ctf32u|obnew|obnewd|obflag|obdel|enmstr)\\b"
				},
				{
					"name": "keyword.operator",
					"match": "\\br([0-9]+)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.mints",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.mints",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment.mints",
			"patterns": [
				{
				"name": "comment.block.mints",
				"begin": "/\\*",
				"end": "\\*/"
				},
				{
					"name":"comment.line.double-slash.mints",
					"begin": "//",
					"end": "$"
				}
			]
		},
		"constants": {
			"name": "constant.mints",
			"patterns": [
				{
					"match": "\\b(int|string|bool|float|uint)\\b",
					"captures": {
						"1": {
							"name": "constant.language"
						}
					}
				}, 
				{
					"name": "constant.numeric",
					"match": "\\b((?:0x[0-9A-Fa-f]+)|(?:-?[0-9]+))\\b"
				}, {
					"name": "constant.numeric",
					"match": "\\b(-?[0-9]+(?:\\.[0-9]+)?f?)\\b"
				}
			]
		},
		"variables": {
			"name":"variable.mints",
			"patterns": [
				{
					"match": "([.-9A-Z_a-z]+);$",
					"name": "variable.name"
				}
			]
		},
		"functions": {
			"name": "support.function.mints",
			"patterns": [
				{
					"match": "^.*:$",
					"name":"support.function"
				},
				{
					"match": "(\\w+(\\.|$))+",
					"name":"support.class"
				},
				{
					"match": "[A-Za-z0-9]+\\(.*\\)",
					"name":"support.function"
				},
				{
					"match": "this\\.[A-Za-z]+",
					"name":"support.property-value"
				}
			]
		}
	},
	"scopeName": "source.mints"
}